<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!-- API 14 theme customizations can go here. -->
        <item name="android:actionBarStyle">@style/CustomActionBarStyle</item>
    	<item name="android:itemBackground">@drawable/background_actionbar_button</item>
    	<item name="android:actionBarItemBackground">@drawable/background_actionbar_button</item>
    </style>
    
    <style name="CustomActionBarStyle" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/orange</item>
    </style>
    
</resources>
